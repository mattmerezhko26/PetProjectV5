<div class="navbar bg-base-100">
  <div class="flex-1">
    <a class="btn btn-ghost normal-case text-xl" href="/">Climate Solutions</a>
  </div>

  <!-- Dropdown for smaller screens -->
  <div class="dropdown sm:hidden">
    <label tabindex="0" class="btn btn-ghost">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
      </svg>
    </label>
    <ul>
      <!-- Navigation links with active class based on the page -->
      <li><a class="<%= (page == '/solutions/projects') ? 'active' : '' %>" href="/solutions/projects">View Projects</a></li>
      <li><a class="<%= (page == '/about') ? 'active' : '' %>" href="/about">About</a></li>
  
      <!-- Check if the user is logged in -->
      <% if (session && session.user) { %>
        <li>
          <details>
            <summary>Account: <%= session.user.userName %></summary>
            <!-- Account options could go here, e.g., Logout or Settings -->
            <ul>
              <li><a href="/userHistory">User History</a></li>
              <li><a href="/logout">Logout</a></li>
            </ul>
          </details>
        </li>
      <% } else { %>
        <li><a href="/login">Login</a></li>
      <% } %>
    </ul>
  </div>

  <!-- Centered Navbar Links for larger screens -->
  <div class="navbar-center hidden sm:flex">
    <ul class="menu menu-horizontal px-1">
      <li><a class="<%= (page == '/solutions/projects') ? 'active' : '' %>" href="/solutions/projects">View Projects</a></li>
      <li><a class="<%= (page == '/about') ? 'active' : '' %>" href="/about">About</a></li>
      <% if (session.user) { %>
        <li>
          <details>
            <summary>Account: <%= session.user.userName %></summary>
            <ul class="p-2 right-0">
              <li><a class="<%= (page == '/solutions/addProject') ? 'active' : '' %>" href="/solutions/addProject">Add Project</a></li>
              <li><a class="<%= (page == '/userHistory') ? 'active' : '' %>" href="/userHistory">User History</a></li>
              <li><a href="/logout">Log Out</a></li>
            </ul>
          </details>
        </li>
      <% } else { %>
        <li>
          <details>
            <summary>Account</summary>
            <ul class="p-2 right-0">
              <li><a class="<%= (page == '/login') ? 'active' : '' %>" href="/login">Login</a></li>
              <li><a class="<%= (page == '/register') ? 'active' : '' %>" href="/register">Register</a></li>
            </ul>
          </details>
        </li>
      <% } %>
    </ul>
  </div>
</div>
